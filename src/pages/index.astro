---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';

import { getPermalink } from '~/utils/permalinks';


const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Hero
    image={{ src: import('~/assets/images/peter-patient-blood-pressure.jpg'), alt: 'K2 TASO group photo' }}
    callToAction={{ text: 'Donate', href: getPermalink('/donate') }}
  >
    <Fragment slot="title">
      Improving lives in rural Malawi
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">
          K2 TASO has existed as a charity since 2007 to offer livelihood security to rural Malawians with the ideal
          that everyone deserves access to quality healthcare, good education, adequate nutrition, safe drinking water
          and a livable income.  We value these basic human rights while contributing in the fight against climate change.
      </span>
    </Fragment>
  </Hero>
