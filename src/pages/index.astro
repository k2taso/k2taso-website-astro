---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';

import { getPermalink } from '~/utils/permalinks';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Hero
    image={{ src: import('~/assets/images/peter-patient-blood-pressure.jpg'), alt: 'K2 TASO group photo' }}
    callToAction={{ text: 'Donate', href: getPermalink('/donate') }}
  >
    <Fragment slot="title">Improving lives in rural Malawi</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">
          K2 TASO has been a charity since 2007, dedicated to ensuring livelihood security for rural Malawians. We
          believe that everyone deserves access to quality healthcare, education, adequate nutrition, safe drinking
          water, and a livable income. Our commitment to these basic human rights is matched by our active contribution
          to the fight against climate change.
        </span>
      </span>
    </Fragment>
